<Page x:Class="Syntra.Eindproject.WPF.MagazijnierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Syntra.Eindproject.WPF"
      mc:Ignorable="d"
      Background="AliceBlue"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MagazijnierPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0">Naam:</Label>
            <TextBox Name="TxtNaam" Grid.Row="0" Grid.Column="1"></TextBox>
            
            <Label Grid.Row="0" Grid.Column="2">Oorsprong:</Label>
            <TextBox Name="TxtOorsprong" Grid.Row="0" Grid.Column="3"></TextBox>

            <Label Grid.Row="1" Grid.Column="0">Aanmaakdatum:</Label>
            <TextBox Name="TxtAanmaakDatum" Grid.Row="1" Grid.Column="1"></TextBox>

            <Label Grid.Row="2" Grid.Column="0">Vervaldatum:</Label>
            <TextBox Name="TxtVervalDatum" Grid.Row="2" Grid.Column="1"></TextBox>

            <Label Grid.Row="1" Grid.Column="2">Soort:</Label>
            <TextBox Name="TxtSoort" Grid.Row="1" Grid.Column="3"></TextBox>

            <Label Grid.Row="2" Grid.Column="2">Prijs/eenheid:</Label>
            <TextBox Name="TxtPrijs" Grid.Row="2" Grid.Column="3"></TextBox>
            <TextBox Name="TxtEenheid" Grid.Row="2" Grid.Column="4"></TextBox>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Button Name="BtnWisProduct" Grid.Column="1" Grid.Row="0" Content="Wis product"></Button>
            <Button Name="BtnUpdateProduct" Grid.Column="1" Grid.Row="1" Content="Update product"></Button>
            <Button Name="BtnVoegProductToe" Grid.Column="1" Grid.Row="2" Content="Voeg toe"></Button>
        </Grid>
        <ListView Name="LbProducts" Grid.Row="1" Grid.Column="0" ></ListView> 
    </Grid>
</Page>
